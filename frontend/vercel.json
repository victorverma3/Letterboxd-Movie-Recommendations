{
    "redirects": [
        {
            "source": "/(.*)",
            "destination": "https://recommendations.victorverma.com/$1",
            "permanent": true,
            "has": [
                {
                    "type": "host",
                    "value": "www.recommendations.victorverma.com"
                }
            ]
        },
        {
            "source": "/watchlist",
            "destination": "/watchlist-picker",
            "permanent": true
        }
    ],
    "rewrites": [
        {
            "source": "/((?!api/.*).*)",
            "destination": "/index.html"
        }
    ]
}
